{% trans_default_domain 'FOSUserBundle' %}
{% extends ('baseAdmin.html.twig') %}
{% block stylesheet %}<link rel="stylesheet" href="{{ asset('assets/css/styleAdmin.css') }}">{% endblock %}

{% block content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="body">

    <div class="container">
        <form class="formContainer" action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="usernameContainer">
                <label for="username">{{ 'Identifiant: '|trans }}</label>
                <input class="usernameInput" type="text" id="username" name="_username" value="{{ last_username }}"
                       required="required" autocomplete="username" />
            </div>

            <div class="passwordContainer">
                <label for="password">{{ 'Mot de passe: '|trans }}</label>
                <input class="passwordInput" type="password" id="password" name="_password" required="required"
                       autocomplete="current-password" />
            </div>

            <div class="rememberContainer">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'Se souvenir de moi?'|trans }}</label>
            </div>

            <input class="input" type="submit" id="_submit" name="_submit" value="{{ 'Se connecter'|trans }}" />
        </form>
    </div>
</div>

{% endblock %}
