    </nav>
    <!-- navbar -->

</header>

<main>
    <div class="backgroundImage">

        {% block content %}
        {% endblock %}

    </div>
</main>

<footer>
    <ul class="navbar">
        <li><a href="{{ path('index') }}">Accueil</a></li>
        <li><a href="{{ path('presentation') }}">Présentation</a></li>
        <li><a href="{{ path('contact') }}">Contact</a></li>
